@model IEnumerable<Student.Models.Students>
@{
    TempData["Title"] = "Students";
}
<div class="content container-fluid">

<div class="page-header">
<div class="row">
<div class="col-sm-12">
<div class="page-sub-header">
<h3 class="page-title">Students</h3>
<ul class="breadcrumb">
<li class="breadcrumb-item"><a asp-action="students">Student</a></li>
<li class="breadcrumb-item active">All Students</li>
</ul>
</div>
</div>
</div>
</div>

<div class="row">
<div class="col-sm-12">
<div class="card card-table comman-shadow">
<div class="card-body pb-0">

<div class="page-header">
<div class="row align-items-center">
<div class="col">
<h3 class="page-title">Students</h3>
</div>
<div class="col-auto text-end float-end ms-auto download-grp">
<a asp-action="StudentsList" asp-controller="Student" class="btn btn-outline-gray me-2"><i class="feather-list"></i></a>
<a asp-action="StudentGrid" asp-controller="Student" class="btn btn-outline-gray me-2 active"><i class="feather-grid "></i></a>
</div>
</div>
</div>

<div class="student-pro-list">
<div class="row">

                            @foreach(Students std in Model)
                            {
                                <div class="col-xl-3 col-lg-4 col-md-6 d-flex">
<div class="card">
<div class="card-body">
<div class="student-box flex-fill">
<div class="student-img">
<a asp-action="StudentView" asp-route-SID="@std.Id" asp-controller="Student">
<img class="img-fluid" alt="Student Info" src="~/assets/img/profiles/avatar-01.jpg">
</a>
</div>
<div class="student-content pb-0">
<h5><a asp-action="StudentDetails" asp-route-SID="@std.Id" asp-route-Dep_ST="@std.DepartmentIdFkNavigation.Description"  asp-controller="Student">@std.Name</a></h5>
<h6>@std.Name</h6>
</div>
</div>
</div>
</div>

</div>
}
</div>
</div>
</div>
</div>
</div>
</div>
</div>

